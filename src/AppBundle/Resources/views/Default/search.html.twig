{% extends 'AppBundle::layout.html.twig' %}

{% block menu_shows %}active{% endblock %}

{% block contents %}
    <section>
        <div class="container">
            <h3>Liste des séries</h3>
            {% if term is defined %}
                <p>Recherche : "{{ term }}"</p>
            {% endif %}
            {% if empty is defined %}
                <p>Veuillez effectuer une recherche.</p>
            {% elseif shows %}
                <div class="row">
                    {% for show in shows %}
                        <a href="{{ path('show', {id: show.id}) }}" class="tvshow col-sm-6">
                            <img class="pull-left" src="{{ web_image('uploads/'~show.image).resize(100, 100).png }}"/>
                            <h4>{{ show.name }} ({{ show.seasons|length }} saisons)</h4>
                            {{ show.synopsis }}
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <p>Aucune série ne correspond à votre recherche.</p>
            {% endif %}

            {% if app.user %}
                <a href="{{ path('admin_add_show') }}">Ajouter une série</a>
            {% endif %}
        </div>
    </section>
{% endblock %}